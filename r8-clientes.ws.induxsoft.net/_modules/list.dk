	{
		if @@(@http_context,"request/get/text_filter")!=""
		{
			ref data=@("&.")
		}else{ref data=@null}
		new @table_definition
	    {
	        @"datatable*":data
	        member @"columns"
	        {
	            member @"codigo"
	            {
	                @"caption":"CÃ³digo"
	            }
	            member @"nombre"
	            {
	                @"caption":"Nombre"
	            }
				member @"rfc"
	            {
	                @"caption":"RFC"
	            }
				 member @"curp"
	            {
	                @"caption":"Curp"
	            }
	            member @"email"
	            {
	                @"caption":"Email"
	            }
	            member @"_actions"
	            {
	                @"caption":"Acciones"
	            }
	        }
	        member @"rows_attributes"
	        {
	           member @"detail"
	           {
	              @"onclick":"SelectRow(#<@@(row,'sys_pk')>)" //Ejemplo
	              @"class":"tr_hover"
	              @"style":"word-break: break-all;"
	           }
	        }
	    }
	    
	}

